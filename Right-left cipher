#include<stdio.h>
#include<string.h>
int main()
{
	char s[50],a[50];
	int i,k,p,q;
	scanf("%s",s);
	k=strlen(s);
	if(k%2!=0)
	{
		p=k/2;
	q=(k/2)+1;
	}
	else
	{
		p=(k/2)-1;
		q=(k/2);
	}
	
		for(i=0;i<k;i=i+2)
		{	a[i]=s[p];
			a[i+1]=s[q];
			p--;
			q++;
		}
		a[i]='\0';
		printf("%s",a);
return 0;
	
 
}
